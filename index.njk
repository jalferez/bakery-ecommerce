{% set hero = collections.homebg | first %}
<section class="hero"
  style="background-image: linear-gradient(rgba(0,0,0,0.35), rgba(0,0,0,0.45)), url('{{ hero.data.bg_image }}');
         background-position: center;
         background-size: cover;
         background-repeat: no-repeat;">
  <div class="hero-overlay">
    <h1>{{ hero.data.heading | safe }}</h1>
    <p>{{ hero.data.subtext }}</p>
    <a href="/menu/" class="btn-primary">View Menu</a>
  </div>
</section>


<section>
  <!-- three_row.njk -->
   {% include "partials/three_row.njk" %}
</section>



<section>
  {% include "partials/rewards_card.njk" %}
</section>






<style>
  .hero {
    height: 93vh; 
    width: 100%;
    background: linear-gradient(
        rgba(0, 0, 0, 0.35),
        rgba(0, 0, 0, 0.45)
      );
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  /* 1. move the overlay up a touch */
.hero-overlay {
  max-width: 800px;
  padding: 1rem;
  z-index: 2;
  transform: translateY(-2rem);   /* ↑↑  shift upward  */
}

/* 2. exaggerated, clamp-driven H1 */
.hero h1 {
  font-family: "Playfair Display", serif;
  font-size: clamp(2.8rem, 7vw + 1rem, 6.5rem); /* 2.8 → 6.5 */
  margin-bottom: 1rem;
  letter-spacing: 1px;
  line-height: 1.05;
}

  .hero p {
    font-family: "Quicksand", sans-serif;
    font-size: 1.4rem;
    line-height: 1.8;
    margin-bottom: 2.5rem;
  }

 a.btn-primary {
  display: inline-block;
  background: #ffffff;
  color: #2e7d32;
  padding: 0.9rem 2rem;
  border-radius: 30px;
  font-weight: 700;
  text-decoration: none;
  font-family: "Quicksand", sans-serif;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
  transition:
    transform 0.35s cubic-bezier(0.25, 1, 0.5, 1),
    box-shadow 0.35s ease,
    background 0.35s ease;
}

a.btn-primary:hover {
  background: #bfe6c2;
  transform: translateY(-5px);
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.25);
}



  @media (max-width: 768px) {
    .hero {
      height: 90vh;
      background-attachment: scroll; 
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .hero p {
      font-size: 1.1rem;
    }
  }
</style>
