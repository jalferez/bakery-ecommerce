---
layout: layouts/base.njk
title: "Menu"
---

<section class="menu-page">
  <div class="container">
    <h1 class="menu-title">Our Menu</h1>
    <p class="menu-subtitle">Freshly baked delights made daily. Choose your favorite treat!</p>





    {% set categories = ["Cake", "Pastry", "Donut", "Savory", "Beverage"] %}
    
    {% for category in categories %}
      <section class="menu-category">
        <h2>{{ category }}s</h2>
        <div class="menu-grid">
          {% for item in collections.menu %}
            {% if item.data.category == category %}
              <div class="menu-item">
                <img src="{{ item.data.image }}" alt="{{ item.data.title }}" loading="lazy">
                <h3>{{ item.data.title }}</h3>
                <p>{{ item.data.description }}</p>
                <p class="price">${{ item.data.price | float | round(2) }}</p>
                <button
                  class="snipcart-add-item"
                  data-item-id="{{ item.fileSlug }}"
                  data-item-name="{{ item.data.title }}"
                  data-item-price="{{ item.data.price }}"
                  data-item-url="/menu/"
                  data-item-image="{{ item.data.image }}">
                  Add to Cart
                </button>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </section>
    {% endfor %}
  </div>
</section>

<style>
  .menu-page {
    padding: 4rem 2rem;
    background: #fffdf9;
  }

  .menu-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 0.3rem;
    color: #4b2e05;
  }

  .menu-subtitle {
    text-align: center;
    color: #6f5a2e;
    margin-bottom: 3rem;
  }

  .menu-category h2 {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
    color: #3c2a10;
    border-bottom: 2px solid #d9c09c;
    display: inline-block;
  }

  .menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .menu-item {
    background: #fff;
    border-radius: 12px;
    padding: 1.2rem;
    box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    text-align: center;
  }

  .menu-item img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 10px;
  }

  .menu-item h3 {
    margin-top: 0.8rem;
    color: #3e2c1b;
  }

  .menu-item p {
    color: #6b5a3e;
  }

  .price {
    font-weight: 600;
    color: #50330c;
    margin: 0.5rem 0;
  }

  .snipcart-add-item {
    background-color: #8b5e34;
    color: #fff;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .snipcart-add-item:hover {
    background-color: #a46f43;
  }
</style>
