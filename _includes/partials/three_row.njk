<section class="three-row">
    {% for card in collections.featured %}
    <div class="card">
        <div class="card-image">
            <img src="{{ card.data.image }}" alt="{{ card.data.title }}">
        </div>
        <div class="card-content">
            <h3>{{ card.data.title }}</h3>
            <p>{{ card.data.description }}</p>
            <div class="card-buttons">
                <a href="{{ card.data.order_link }}" class="primary-btn">
                    <img src="/images/shopping-bag-svgrepo-com.svg" alt="Shopping Bag Icon" class="icon" />
                    <span>{{ card.data.order_label }}</span>
                </a>


                <a href="{{ card.data.details_link }}" class="secondary-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor"
                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                        <line x1="5" y1="12" x2="19" y2="12" />
                        <polyline points="12 5 19 12 12 19" />
                    </svg>
                    <span>{{ card.data.details_label }}</span>
                </a>
            </div>
        </div>
    </div>
    {% endfor %}
</section>

<style>
    /* Card layout Mobile First */
    .three-row {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        max-width: 1100px;
        margin: 4rem auto;
        padding: 1rem;
    }

    .card {
        display: flex;
        flex-direction: column;
        background: #fff;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        width: 100%;
        max-width: 900px;
    }

    .card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
    }

    .card-image img {
        width: 100%;
        height: auto;
        display: block;
        object-fit: cover;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .card-content {
        padding: 1.5rem;
        text-align: center;
    }

    .card-content h3 {

        color: #2e7d32;
        font-size: 1.6rem;
        margin-bottom: 0.6rem;
    }

    .card-content p {
        font-family: "Quicksand", sans-serif;
        color: #444;
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 1.5rem;
    }

    /* Button Wrapper */
    .card-buttons {
        display: flex;
        justify-content: space-between;
        border-top: 1px solid #ddd;
    }

    .primary-btn,
    .secondary-btn {
        flex: 1;
        text-align: center;
        text-decoration: none;
        padding: 1rem 0;
        font-family: "Quicksand", sans-serif;
        font-size: 0.9rem;
        font-weight: 700;
        text-transform: uppercase;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: none;
        border-radius: 0;
        background: #f8f8f8;
        color: #2e7d32;
        transition:
            background 0.3s ease,
            color 0.3s ease,
            transform 0.25s ease;
        outline: none;
    }

    .primary-btn+.secondary-btn {
        border-left: 1px solid #ddd;
    }

    .primary-btn {
        background: #ffffff;
    }

    .primary-btn .icon {
        width: 22px;
        height: 22px;
        margin-bottom: 0.4rem;
        filter: invert(26%) sepia(72%) saturate(322%) hue-rotate(80deg) brightness(90%) contrast(90%);

    }

    .primary-btn:hover {
        background: #6BAA75;
        color: #1b5e20;
        transform: translateY(-3px);
    }

    .secondary-btn {
        background: #f5f5f5;
    }

    .secondary-btn:hover {
        background: #6BAA75;
        color: #1b5e20;
        transform: translateY(-3px);
    }

    /* ICONS */
    .icon {
        margin-bottom: 0.4rem;
        color: #2e7d32;
        stroke-width: 2;
    }

    /* Media */
    @media (min-width: 768px) {
        .card {
            flex-direction: row;
            height: 320px;
        }

        .card:nth-child(even) {
            flex-direction: row-reverse;
        }

        .card-image,
        .card-content {
            flex: 1;
            width: 50%;
        }

        .card-image img {
            height: 100%;
        }

        .card-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: left;
            padding: 2rem;
        }

        .card-buttons {
            justify-content: stretch;
        }

        .primary-btn,
        .secondary-btn {
            flex-direction: row;
            justify-content: center;
            align-items: center;
            gap: 0.6rem;
            font-size: 0.95rem;
        }

        .icon {
            margin: 0;
        }
    }
</style>