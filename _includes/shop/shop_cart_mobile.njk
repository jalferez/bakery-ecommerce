<div id="floating-cart" class="snipcart-checkout custom-cart-btn hidden" aria-label="Open shopping cart">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="22" height="22" fill="currentColor">
    <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zm10
    0c-1.1 0-1.99.9-1.99 2S15.9 22 17 22s2-.9 2-2-.9-2-2-2zM7.16
    14.26l.84-1.68h8.99c.75 0 1.41-.41 1.75-1.03l3.58-6.49a1
    1 0 00-.87-1.49H6.21l-.94-2H1v2h3l3.6
    7.59-1.35 2.45C5.11 16.37 6.02 18 7.5 18H19v-2H7.42c-.14
    0-.25-.11-.26-.24z"/>
  </svg>
  <span id="cart-count">0</span>
</div>


<style>
  #floating-cart {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background-color: #3d2b1f; /* dark brown for bakery theme */
  color: #fff;
  padding: 0.8rem 1.1rem;
  border-radius: 50px;
  cursor: pointer;
  display: none;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  z-index: 10;
  font-size: 1rem;
  align-items: center;
  justify-content: center;
  gap: 6px;
  border: none;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

#floating-cart:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.35);
}

#floating-cart svg {
  width: 22px;
  height: 22px;
}
#cart-count {
  background: #ff6347;
  color: #fff;
  font-weight: bold;
  border-radius: 50%;
  padding: 0.2rem 0.5rem;
  font-size: 0.9rem;
  position: relative;
  top: -2px;
  transition: background 0.3s;
}



@keyframes pop {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

#cart-count.pop {
  animation: pop 0.3s ease;
}


  @media (max-width: 1023px) {
    #floating-cart {
      display: flex;
    }
  }


  @media (min-width: 1024px) {
    #floating-cart {
      display: none !important;
    }
  }
</style>


<script>
(function waitForSnipcart() {
  if (window.Snipcart && Snipcart.store && Snipcart.events) {
    const floatingCart = document.getElementById('floating-cart');
    const cartCount = document.getElementById('cart-count');


    const updateCart = () => {
      const cart = Snipcart.store.getState().cart;
      const count = cart.items.items.reduce((total, item) => total + item.quantity, 0);
      cartCount.textContent = count;
      floatingCart.style.display = count > 0 ? 'flex' : 'none';

      cartCount.classList.remove('pop');
      void cartCount.offsetWidth; 
      cartCount.classList.add('pop');
    };


    Snipcart.events.on('item.added', updateCart);
    Snipcart.events.on('item.removed', updateCart);
    Snipcart.events.on('item.updated', updateCart);


    Snipcart.events.on('cart.opened', () => {
      floatingCart.style.display = 'none';
    });


    Snipcart.events.on('cart.closed', () => {
      const cart = Snipcart.store.getState().cart;
      const count = cart.items.items.reduce((total, item) => total + item.quantity, 0);
      floatingCart.style.display = count > 0 ? 'flex' : 'none';
    });


    floatingCart.addEventListener('click', () => {
      Snipcart.api.theme.cart.open();
    });


    updateCart();
  } else {

    setTimeout(waitForSnipcart, 300);
  }
})();
</script>



